<h1>New work</h1>

<% form_for(@work) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :format %><br />
    <%= f.text_field :format %>
  </p>
  <p>
    <%= f.label :mod_url %><br />
    <%= f.text_field :mod_url %>
  </p>
  <p>
    <%= f.label :mp3_url %><br />
    <%= f.text_field :mp3_url %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', works_path %>